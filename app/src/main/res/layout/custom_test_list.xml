<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/branch_live1"
    android:elevation="3dp"
    android:background="@drawable/shadow">
    <ImageView
        android:id="@+id/live_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/test"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/online_testname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/live_image"
        android:text="Test Name"
        android:textColor="#8EC3CF"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/total_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginRight="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/live_image"
        android:layout_below="@id/online_testname"
        android:textColor="@color/edit_text"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/total_question"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/online_testname"
        android:textColor="@color/edit_text"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/live_image"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:id="@+id/layout_pervious"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:visibility="visible"
            android:background="#9CBAED">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="SOLUTION"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_start"
            android:layout_width="150dp"
            android:layout_marginStart="5dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_toRightOf="@id/layout_pervious"
            android:clickable="true"
            android:visibility="visible"
            android:background="#F3D268">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="RE-TAKE TEST"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_new_start"
            android:layout_width="180dp"
            android:layout_marginStart="5dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_toRightOf="@id/layout_pervious"
            android:clickable="true"
            android:visibility="visible"
            android:background="#F3D268">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="START TEST"/>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
