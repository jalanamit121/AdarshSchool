<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/botton_layout_white">
        <TextView
            android:id="@+id/tv_question_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_circle_gray_trans"
            android:text="1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="what is ur name"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="4dp"
            android:layout_toRightOf="@id/tv_question_num"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:fontFamily="@font/proximanovaregular"/>
        <TextView
            android:id="@+id/tv_review_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Review"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:drawableEnd="@drawable/ic_star_border_black_24dp"
            android:layout_alignParentEnd="true"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/tv_review_question_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Review"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:visibility="gone"
            android:drawableEnd="@drawable/ic_star_border_yellow_24dp"
            android:layout_alignParentEnd="true"
            android:drawablePadding="5dp"/>
        <ImageView
            android:id="@+id/img_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:visibility="visible"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/text_title"/>
        <RelativeLayout
            android:id="@+id/layout_question_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_layout_white"
            android:gravity="center"
            android:visibility="visible"
            android:clickable="true"
            android:layout_below="@id/img_question_title"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:focusable="true">
        <ImageView
            android:id="@+id/image_a"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/a_letter"/>

        <TextView
            android:id="@+id/questionOtion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_layout_white"
            android:fontFamily="@font/proximanovaregular"
            android:text=""
            android:textColor="@color/edit_text"
            android:textColorHint="@color/edit_text"
            android:visibility="visible"
            android:layout_toRightOf="@id/image_a"
            android:padding="18dp"
            android:layout_marginStart="5dp"
            android:textSize="14sp" />
            <TextView
                android:id="@+id/questionOtion1_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_green_flag"
                android:fontFamily="@font/proximanovaregular"
                android:text=""
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:layout_toRightOf="@id/image_a"
                android:visibility="gone"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_img1"
            android:layout_width="match_parent"
            android:layout_below="@id/layout_question_option1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_question_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:src="@drawable/ic_businessman"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_question_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_layout_white"
            android:gravity="center"
            android:visibility="visible"
            android:clickable="true"
            android:layout_below="@id/layout_img1"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:focusable="true">
            <ImageView
                android:id="@+id/image_b"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/b_letter"/>

            <TextView
                android:id="@+id/questionOtion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botton_layout_white"
                android:fontFamily="@font/proximanovaregular"
                android:text=""
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:layout_toRightOf="@id/image_b"
                android:visibility="visible"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/questionOtion2_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_green_flag"
                android:fontFamily="@font/proximanovaregular"
                android:text=""
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:layout_toRightOf="@id/image_b"
                android:visibility="gone"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_img2"
            android:layout_width="match_parent"
            android:layout_below="@id/layout_question_option2"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_question_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:src="@drawable/ic_businessman"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_question_option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_layout_white"
            android:gravity="center"
            android:visibility="visible"
            android:clickable="true"
            android:layout_below="@id/layout_img2"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:focusable="true">
            <ImageView
                android:id="@+id/image_c"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/c_letter"/>

            <TextView
                android:id="@+id/questionOtion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botton_layout_white"
                android:fontFamily="@font/proximanovaregular"
                android:text=""
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:layout_toRightOf="@id/image_c"
                android:visibility="visible"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/questionOtion3_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_green_flag"
                android:fontFamily="@font/proximanovaregular"
                android:text=""
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:layout_toRightOf="@id/image_c"
                android:visibility="gone"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_img3"
            android:layout_width="match_parent"
            android:layout_below="@id/layout_question_option3"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_question_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:src="@drawable/ic_businessman"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_question_option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_layout_white"
            android:gravity="center"
            android:visibility="visible"
            android:clickable="true"
            android:layout_marginBottom="7dp"
            android:layout_below="@id/layout_img3"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:focusable="true">
            <ImageView
                android:id="@+id/image_d"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/d_letter"/>

            <TextView
                android:id="@+id/questionOtion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botton_layout_white"
                android:fontFamily="@font/proximanovaregular"
                android:text=""
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:layout_toRightOf="@id/image_d"
                android:visibility="visible"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />



            <TextView
                android:id="@+id/questionOtion4_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_green_flag"
                android:fontFamily="@font/proximanovaregular"
                android:text=""
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:layout_toRightOf="@id/image_d"
                android:visibility="gone"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_img4"
            android:layout_width="match_parent"
            android:layout_below="@id/layout_question_option4"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_question_option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:src="@drawable/ic_businessman"/>

        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>
