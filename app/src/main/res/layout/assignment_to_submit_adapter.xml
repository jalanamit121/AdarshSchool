<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/branch_live1"
    android:elevation="3dp"
    android:clickable="true"
    android:background="@drawable/shadow"
    >

    <RelativeLayout
        android:id="@+id/branch_live"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/live_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/dummy"
           />

        <TextView
            android:id="@+id/assignment_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/live_image"
            android:text=""
            android:textColor="#030303"
            android:textSize="14sp"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic : "
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/live_image"
            android:layout_below="@id/assignment_subject"
            android:textColor="@color/edit_text"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/assignment_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_below="@id/assignment_subject"
            android:layout_toRightOf="@id/live_image"
            android:text=""
            android:textColor="@color/edit_text"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/live_image"
            android:layout_below="@id/assignment_topic"
            android:text="Teacher : "
            android:textColor="@color/edit_text"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/assignment_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_toRightOf="@id/live_image"
            android:layout_below="@id/assignment_topic"
            android:text=""
            android:textColor="@color/edit_text"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/live_image"
            android:layout_below="@id/assignment_teacher"
            android:text="DeadLine : "
            android:layout_marginBottom="5dp"
            android:textColor="@color/edit_text"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/assignment_dead_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_toRightOf="@id/live_image"
            android:layout_below="@id/assignment_teacher"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textColor="@color/edit_text"
            android:textSize="12sp" />



    </RelativeLayout>


</RelativeLayout>
