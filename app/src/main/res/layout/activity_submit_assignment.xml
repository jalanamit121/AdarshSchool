<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".Activity.SubmitAssignmentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp">

        <LinearLayout
            android:id="@+id/layout_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:padding="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/proximanovaregular"
            android:hint="Description"
            android:inputType="text|textMultiLine"
            android:maxLines="10"
            android:textColor="@color/edit_text"
            android:textColorHint="@color/edit_text"
            android:textSize="14sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/layout_description"/>
        <Button
            android:id="@+id/addImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gradientViolet"
            android:textColor="@color/white"
            android:text="Add File"
            android:layout_marginTop="5dp"
            android:layout_below="@id/image_view"
            android:padding="14dp"
            android:layout_centerInParent="true"
            />

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload File"
            android:layout_centerInParent="true"
            android:background="@color/gradientViolet"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_below="@id/image_view"
            android:visibility="gone"/>
        </RelativeLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:weightSum="3"
            android:background="@drawable/bottom_layout">
            <LinearLayout
                android:id="@+id/layout_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/image_home"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_home_black_24dp"
                    />
                <TextView
                    android:id="@+id/text_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:layout_below="@id/image_home"
                    android:textColor="#111"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/image_history"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_language_black_24dp"
                    />
                <TextView
                    android:id="@+id/text_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:layout_below="@id/image_history"
                    android:textColor="#111"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/image_logout"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logout"
                    />
                <TextView
                    android:id="@+id/text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:layout_below="@id/image_logout"
                    android:textColor="#111"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>