<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/branch_live1"
    android:elevation="3dp"
    android:clickable="true"
    android:background="@drawable/shadow">
    <ImageView
        android:id="@+id/live_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/test"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/online_subjectname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/live_image"
        android:text="Subject Name"
        android:textColor="#8EC3CF"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/online_totaltest"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/live_image"
        android:layout_below="@id/online_subjectname"
        android:text="test"
        android:textColor="@color/edit_text"
        android:textSize="14sp"/>
</RelativeLayout>
