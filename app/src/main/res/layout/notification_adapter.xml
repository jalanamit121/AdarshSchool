<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="5dp"
    android:id="@+id/branch_live1"
    android:elevation="4dp"
    android:clickable="true"
    android:background="@drawable/shadow">

    <RelativeLayout
        android:id="@+id/branch_live"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_user"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="7dp"
            android:src="@drawable/ic_email"/>
        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/img_user"
            android:layout_marginTop="9dp"
            android:textColor="#111"
            android:text=""/>

        <TextView
            android:id="@+id/text_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:fontFamily="@font/hindmedium"
            android:layout_below="@id/text_message"
            android:textColor="#111"
            android:text=""/>
        <ImageView
            android:id="@+id/img_priority_high"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_sender"
            android:layout_marginStart="7dp"
            android:src="@drawable/ic_record"/>
        <ImageView
            android:id="@+id/img_priority_medium"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_sender"
            android:visibility="gone"
            android:layout_marginStart="7dp"
            android:src="@drawable/ic_medium_button"/>
        <ImageView
            android:id="@+id/img_priority_low"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_sender"
            android:visibility="gone"
            android:layout_marginStart="7dp"
            android:src="@drawable/ic_low_button"/>
        <TextView
            android:id="@+id/text_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/img_user"
            android:fontFamily="@font/hindbold"
            android:layout_marginTop="9dp"
            android:layout_below="@id/text_sender"
            android:textColor="#111"
            android:text=""/>
        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@id/text_priority"
            android:fontFamily="@font/hindbold"

            android:layout_marginTop="9dp"
            android:layout_below="@id/text_sender"
            android:textColor="#111"
            android:text=""/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/text_priority"
            android:background="#A5C3F3"/>

        <TextView
            android:id="@+id/text_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/hindregular"
            android:layout_below="@id/text_priority"
            android:textColor="#111"
            android:text=""/>
        <TextView
            android:id="@+id/text_user_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/hindregular"
            android:layout_below="@id/text_priority"
            android:textColor="#111"
            android:text=""/>


    </RelativeLayout>

</RelativeLayout>
