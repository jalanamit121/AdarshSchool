<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiscussionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearDisscussion"
        android:background="@drawable/doubt_header"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtViewAsk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ask"
            android:gravity="center"
            android:fontFamily="@font/proximanovaregular"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <View
            android:layout_width="2dp"
            android:background="#fff"
            android:layout_height="match_parent"/>



        <TextView
            android:id="@+id/txtViewMcq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MCQ"
            android:fontFamily="@font/proximanovaregular"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearDisscussion"
        android:id="@+id/containerDisscussion"
        />


</RelativeLayout>